<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_question_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_small_8"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textSize_normal_16" />

    <EditText
        android:id="@+id/et_question_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_question_hint"
        android:textSize="@dimen/textSize_normal_16" />


    <EditText
        android:id="@+id/et_answer_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_answer_hint"
        android:textSize="@dimen/textSize_normal_16" />

</LinearLayout>