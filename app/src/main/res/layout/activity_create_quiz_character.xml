<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.CreateQuizCharacterActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small_8"
            android:gravity="center_horizontal"
            android:text="@string/create_qc_hint"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textSize_large_20" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_depth"
            android:layout_marginLeft="@dimen/spacing_small_8"
            android:layout_marginTop="@dimen/spacing_normal_16dp"
            android:layout_marginRight="@dimen/spacing_small_8"
            android:layout_marginBottom="@dimen/spacing_normal_16dp"
            android:background="@color/colorPrimary" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">


        <ListView
            android:id="@+id/ll_dataInputList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>
    </ScrollView>

    <TextView
        android:id="@+id/tv_image_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_warning_24dp"
        android:gravity="center_horizontal"
        android:text="@string/image_warning" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_pick_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/pick_picture" />

        <Button
            android:id="@+id/btn_save_character"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/save_character" />
    </LinearLayout>
</LinearLayout>
